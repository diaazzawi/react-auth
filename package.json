{
  "name": "@diaazzawi/react-auth",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Authentication Library for React, which makes Token based auth very easy",
  "keywords": [
    "react",
    "auth",
    "authentication",
    "jwt",
    "jsonwebtoken",
    "token"
  ],
  "author": "Dia Azzawi <dia.azzawi@gmail.com>",
  "license": "MIT",
  "module": "dist/react-auth.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "src": "src",
    "lib": "dist",
    "test": "__tests__"
  },
  "files": ["dist/", "src/"],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/react-auth.mjs",
      "default": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diaazzawi/react-auth.git"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "yarn clean && tsc -b && vite build",
    "format": "biome format",
    "format:write": "biome format --write --unsafe",
    "lint": "biome lint",
    "lint:write": "biome lint --write --unsafe",
    "check": "biome check",
    "check:write": "biome check --write --unsafe",
    "prepack": "yarn build"
  },
  "dependencies": {
    "deep-equal": "^2.2.3",
    "js-cookie": "^3.0.5",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/deep-equal": "^1.0.4",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "22.10.5",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.5.3"
  },
  "trustedDependencies": ["@biomejs/biome"]
}
