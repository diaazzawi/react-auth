{
  "name": "@diaazzawi/react-auth",
  "version": "1.0.5",
  "private": false,
  "description": "Authentication Library for React, which makes Token based auth very easy",
  "keywords": [
    "react",
    "auth",
    "authentication",
    "jwt",
    "jsonwebtoken",
    "token"
  ],
  "author": "Dia Azzawi <dia.azzawi@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diaazzawi/react-auth.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "unpkg": "dist/react-auth.umd.min.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "bugs": {
    "url": "https://github.com/diaazzawi/react-auth/issues"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "yarn clean && tsc -b && vite build",
    "format": "biome format",
    "format:write": "biome format --write --unsafe",
    "lint": "biome lint",
    "lint:write": "biome lint --write --unsafe",
    "check": "biome check",
    "check:write": "biome check --write --unsafe",
    "prepack": "yarn build"
  },
  "dependencies": {
    "deep-equal": "^2.2.3",
    "js-cookie": "^3.0.5",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/deep-equal": "^1.0.4",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "22.10.5",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.3",
    "typescript": "^5.7.3",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.5.3"
  },
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}
