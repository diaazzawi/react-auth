{
  "name": "@diaazzawi/react-auth",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Authentication Library for React, which makes Token based auth very easy",
  "keywords": [
    "react",
    "auth",
    "authentication",
    "jwt",
    "jsonwebtoken",
    "token"
  ],
  "author": "Dia Azzawi <dia.azzawi@gmail.com>",
  "license": "MIT",
  "source": "src/index.ts",
  "main": "index.js",
  "module": "index.js",
  "types": "index.d.ts",
  "directories": {
    "src": "src",
    "lib": "dist",
    "test": "__tests__"
  },
  "files": ["hooks", "utils", "dist", "*.js", "*.d.ts"],
  "exports": {
    ".": "./dist/index.js",
    "./errors": "./dist/errors.js",
    "./AuthContext": "./dist/AuthContext.js",
    "./createStore": "./dist/createStore.js",
    "./AuthProvider": "./dist/AuthProvider.js",
    "./createRefresh": "./dist/createRefresh.js",
    "./hooks/*": "./dist/hooks/*.js",
    "./utils/*": "./dist/utils/*.js",
    "./route": "./dist/route/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diaazzawi/react-auth.git"
  },
  "scripts": {
    "build": "tsc -b && vite build",
    "format": "biome format",
    "format:write": "biome format --write --unsafe",
    "lint": "biome lint",
    "lint:write": "biome lint --write --unsafe",
    "check": "biome check",
    "check:write": "biome check --write --unsafe"
  },
  "dependencies": {
    "deep-equal": "^2.2.3",
    "js-cookie": "^3.0.5",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/deep-equal": "^1.0.4",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "22.10.5",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.7.3",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.5.3"
  },
  "trustedDependencies": ["@biomejs/biome"]
}
